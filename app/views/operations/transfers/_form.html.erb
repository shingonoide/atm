
<%= form_with scope: "transfer", url: "/operations/transfers" do |form| %>
  <% if transfer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transfer.errors.count, "error") %> prohibited this deposit from being saved:</h2>

      <ul>
        <% transfer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :account_number, style: "display: block" %>
    <%= form.number_field :account_number, value: current_account.account_number, disabled: true %>
  </div>
  <div>
    <%= form.label :to_account_number, style: "display: block" %>
    <%= form.number_field :to_account_number %>
  </div>
  
  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount, step: 0.01 %>
  </div>
  <div>
    <%= form.submit "Transfer" %>
  </div> 
<% end %>
