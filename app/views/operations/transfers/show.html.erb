<div class="card card-normal bg-base-100 shadow-xl">
  <div class="card-body">
    <h2 class="card-title">Transfer #<%= @transfer.id %></h2>
    <div class="stat">
      <div class="stat-title">From Account</div>
      <div class="stat-value"><%= @transfer.account.account_number %></div>
    </div>
    <div class="stat">
      <div class="stat-title">To Account</div>
      <div class="stat-value"><%= @transfer.to_account_number %></div>
    </div>
    <div class="stat">
      <div class="stat-title">Transfer amount</div>
      <div class="stat-value">$<%= @transfer.amount %></div>
    </div>
    
    <div class="card-actions justify-end">
      <%= link_to "Back", operations_path, class: "btn btn-primary" %>
    </div>

  </div>
</div>
