<div class="card card-normal bg-base-100 shadow-xl">
  <div class="card-body">
    <h2 class="card-title">Deposit #<%= @deposit.id %></h2>
    <div class="stat">
      <div class="stat-title">Account Deposit</div>
      <div class="stat-value"><%= @deposit.account.account_number %></div>
    </div>
    <div class="stat">
      <div class="stat-title">Deposit amount</div>
      <div class="stat-value">$<%= @deposit.amount %></div>
    </div>
    
    <div class="card-actions justify-end">
      <%= link_to "Back", operations_path, class: "btn btn-primary" %>
    </div>

  </div>
</div>
